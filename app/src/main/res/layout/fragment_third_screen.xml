<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.onboarding.ThirdScreen">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie3"
        android:layout_width="410dp"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lastscreen"
        />

    <TextView
        android:id="@+id/thirdScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boardText3"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/teko"
        android:padding="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/thirdScreenButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="#FF5722" />



</LinearLayout>